<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PasswordInputView">
        <attr name="piv_borderWidth" format="dimension"/>
        <attr name="piv_borderColor" format="color"/>
        <attr name="piv_borderRadius" format="dimension"/>
        <attr name="piv_passwordLength" format="integer"/>
        <attr name="piv_passwordWidth" format="dimension"/>
        <attr name="piv_passwordColor" format="color"/>
        <attr name="piv_passwordColor2" format="color"/>
        <attr name="piv_passwordRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="EasyProgressAttr">
        <attr name="ep_arcColor"  format="reference|color"/>
        <attr name="ep_borderWidth"  format="reference|dimension"/>
        <attr name="ep_duration"  format="reference|integer"/>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="maxLine"  format="reference|integer"/>
    </declare-styleable>

    <declare-styleable name="StarRatingBar">
        <!-- 默认的星星图片 优先级高于绘制的星星 -->
        <attr name="defaultStar" format="reference"/>
        <!-- 选中的星星图片 -->
        <attr name="star" format="reference"/>
        <!-- 默认的星星颜色 -->
        <attr name="defaultStarColor" format="color|reference"/>
        <!-- 选中的星星颜色 -->
        <attr name="starColor" format="color|reference"/>
        <!-- 星星的个数 -->
        <attr name="starNum" format="integer|reference"/>
        <!-- 可选的星星的步长 如：0.5表示可选半颗星 -->
        <attr name="starStep" format="float|reference"/>
        <!-- 星星之间的间距 -->
        <attr name="starGap" format="dimension|reference"/>
        <!-- 星星的大小 -->
        <attr name="starSize" format="dimension|reference"/>
        <!-- 选中星星的部分 小于等于starNum -->
        <attr name="rating" format="float|reference"/>
        <!-- 星星是否响应事件 默认为true 表示仅作为展示 -->
        <attr name="isIndicator" format="boolean|reference"/>
    </declare-styleable>

    <declare-styleable name="SlidingTabLayout">
        <attr name="sliding_tl_fill_viewport" format="boolean|reference"/>
    </declare-styleable>

    <declare-styleable name="ContainerLayout">
        <attr name="iiv_titleStyle" format="reference" />
        <attr name="iiv_itemStyle" format="reference" />
        <!-- the tile or item space  -->
        <attr name="iiv_title_space" format="dimension|reference" />
        <attr name="iiv_item_space" format="dimension|reference" />
        <!-- optional -->
        <attr name="iiv_titleBold" format="boolean|reference" />
        <attr name="iiv_align_key" format="boolean|reference" />
    </declare-styleable>
</resources>
